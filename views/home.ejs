<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <script type="text/javascript" src="js/index.js"></script>
</head>

<body>

    <div class="jumbotron jumbotron-fluid header">
        <div class="container">
            <h1 class="display-4">AK Gender Reveal</h1>
            <form action="/" method="post">
                <input type="text" name="voterName" id="textbox1" class="perfect1" placeholder="Your name"
                    autocomplete="off">
                <input type="radio" name="vote" value="true" id="" checked>
                <label>Boy</label>
                <input type="radio" name="vote" value="false" id="">
                <label>Girl</label>
                <button type="submit" onclick="validateTextBox()">Submit</button>
                <p class="perfect2 needNameDefault">Please input your name</p>
            </form>
            <br>

            <div class="container">

                <div class="row">


                    <div class="col alert alert-info">
                        <h1>BOY - <%= boycount %></h1>

                        <% for(let i =0; i < dbdata.length; i++) { %>
                        <%    if(dbdata[i].boy === 1) {%>
                        <p><%= dbdata[i].name %></p>
                        <%     }%>
                        <% }%>

                    </div>


                    <div class="col alert alert-danger">
                        <h1>GIRL - <%= girlcount %></h1>
                        <% for(let i =0; i < dbdata.length; i++) { %>
                        <%    if(dbdata[i].boy === 0) {%>
                        <p><%= dbdata[i].name %></p>
                        <%     }%>
                        <% }%>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <!-- The overlay -->
    <div id="myNav" class="overlay">

        <!-- Button to close the overlay navigation -->
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

        <!-- Overlay content -->
        <div class="overlay-content">
            <div class="container">

                <div class="row">

                    <div class="col">
                        <form action="/boywinner" method="POST">
                            <button class="btn btn-outline-primary" id="Boy" name="Boy" value="True">BOY</button>
                        </form>
                    </div>

                    <span style="color: white;"> Or </span>

                    <div class="col">
                        <form action="/girlwinner" method="POST">
                            <button class="btn btn-outline-danger" id="Girl" name="Girl" value="False">Girl</button>
                        </form>
                    </div>

                </div>

            </div>
        </div>

        
        
        


    </div>

    <!-- Use any element to open/show the overlay navigation menu -->
    <div class="raffleBtn">
        <button class="btn btn-outline-info" onclick="openNav()">Game</button>
    </div>
    <!-- <span onclick="openNav()">open</span> -->

    <footer >
        <p class="mt-5 mb-3 text-muted" style="margin: auto;">&copy; Ant</p>
    </footer>
</body>

</html>